{
    "name": "cryptr/cryptr-php",
    "description": "Cryptr Package to handle Cryptr authentication processes",
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Thibaud RENAUX",
            "email": "thibaud@cryptr.co"
        }
    ],
    "require": {
        "php": ">=7.0",
        "firebase/php-jwt": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Cryptr\\Cryptr\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests",
            "src"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.2",
        "phpunit/php-code-coverage": "^9.2"
    }
}
